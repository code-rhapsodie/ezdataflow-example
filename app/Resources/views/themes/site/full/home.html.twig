{% extends '@ezdesign/pagelayout.html.twig' %}

{% block content %}
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->
            <img class="masthead-avatar mb-5" src="{{ asset('img/logo_cr.svg') }}" alt="">

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">Code Rhapsodie eZ Dataflow</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0">Web Expert</p>

        </div>
    </header>
    <section class="page-section portfolio" id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Dataflow Exemples</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Portfolio Grid Items -->
            <div class="row">

                <!-- Portfolio Item 1 -->
                {% for children in childrens %}
                    <div class="col-md-6 col-lg-4">
                        <div class="portfolio-item mx-auto mb-5">
                            {{ ez_render_field( children, 'image', { parameters: { 'alias': 'large', 'class': 'img-fluid'} } ) }}

                            <h3>{{ ez_content_name(children) }}</h3>
                            <p>{{ ez_render_field(children, 'short_description') }}</p>
                            <p><a href="{{ path('ez_urlalias', {'contentId': children.id}) }}"
                                  class="btn btn-outline-success btn-lg">See more</a></p>
                        </div>
                    </div>
                {% endfor %}

            </div>
            <!-- /.row -->

        </div>
    </section>
