{% extends '@ezdesign/pagelayout.html.twig' %}
{% block content %}
    <!-- Masthead -->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->
            <img class="masthead-avatar mb-5" src="{{ asset('img/logo_cr.svg')}}" alt="">

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">Code Rhapsodie eZ Dataflow</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0">Web Expert</p>

        </div>
    </header>

    <!-- Portfolio Section -->
    <section class="page-section portfolio" id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Examples</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Portfolio Grid Items -->
            <div class="row">

                <!-- Portfolio Item 1 -->
                {% for item in childrens %}
                <div class="col-md-6 col-lg-4">
                    <div class="portfolio-item mx-auto">
                        {{ ez_render_field(item, 'image', {'parameters':{ 'alias': 'thumb'}, 'class': 'img-fluid'}) }}
                        <h2>{{ ez_content_name(item) }}</h2>
                        {{ ez_render_field(item, 'short_description') }}
                        <div class="form-group">
                            <a href="{{ path('ez_urlalias', {'contentId': item.id}) }}" class="btn btn-outline-info btn-lg">See more</a>
                            {% if not ez_is_field_empty(item, 'github') %}&nbsp;&nbsp;
                            <a href="{{ ez_field_value(item, 'github').link }}" class="btn btn-outline-dark btn-lg"><i class="fab fa-fw fa-github"></i> See code source</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
            <!-- /.row -->

        </div>
    </section>

    <!-- About Section -->
    <section class="page-section bg-primary text-white mb-0" id="about">
        <div class="container">

