{% extends '@ezdesign/pagelayout.html.twig' %}
{% block content %}
    <!-- Masthead -->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->
            {{ ez_render_field(content, 'image', {'parameters':{ 'alias':'original'}, 'class': 'masthead-avatar mb-5'}) }}

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">{{ ez_content_name(content) }}</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

        </div>
    </header>

    <!-- content Section -->
    <section class="page-section portfolio" id="details">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    Published date
                </div>
                <div class="col-9">
                    {{ ez_render_field(content, 'published_date') }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ ez_render_field(content, 'description') }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <a class="btn btn-outline-info btn-lg" href="{{ ez_field_value(content, 'original_url').link }}" target="_blank">See more</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}