{% extends '@ezdesign/pagelayout.html.twig' %}
{% block content %}
    <!-- Masthead -->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->
            {{ ez_render_field(content, 'image', {'parameters':{ 'alias':'original'}, 'class': 'masthead-avatar mb-5'}) }}

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">{{ ez_content_name(content) }}</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

        </div>
    </header>

    <!-- content Section -->
    <section class="page-section portfolio" id="details">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    Zip Code
                </div>
                <div class="col-9">
                    {{ ez_render_field(content, 'codesPostaux') }}
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    Region code
                </div>
                <div class="col-9">
                    {{ ez_render_field(content, 'codeRegion') }}
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    Department code
                </div>
                <div class="col-9">
                    {{ ez_render_field(content, 'codeDepartement') }}
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    Population
                </div>
                <div class="col-9">
                    {{ ez_render_field(content, 'population') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}